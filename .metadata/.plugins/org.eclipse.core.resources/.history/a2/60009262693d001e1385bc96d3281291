<body>
이메일 : <input type="text" id="email" >
<!-- onchange : 사용자가 선택 또는 값이 변화 되었을 때 적용되는 이벤트 -->
<select id="email2" onchange="abc(this.value)">
	<option value="">직접입력</option>
	<option value="naver.com">네이버</option>
	<option value="nate.com">네이트</option>
	<option value="gmail.com">구글</option>
</select>
<br><br>
<input type="hidden" id="money" value="10,000">
수량 : <select id="ea" onchange="bbb(this.value)">
	<option vlaue="1">1EA</option>
	<option vlaue="2">2EA</option>
	<option vlaue="3">3EA</option>
</select><br>
최종가격 : <div id="total">10,000</div> <!-- div,header,sction,...등 value값을 못넣음 -->
</body>
<script>
	function bbb(z){
		var aa = document.getElementById("money").value; //1개당 실제 가격
		var bb = document.getElementById("total");
		var sum = aa*z;
	}
	function abc(e){	//이벤트 핸들링 함수
		//console.log(e);
		var aa = document.getElementById("email");
		aa.value = e;
	}
</script>

	<form id="f" method="post" action="./fileupok.do" enctype="multipart/form-data"> 
		<!-- application/x-www-form-urlencoded"얘는 인코딩, multipart/form-data 얘는 첨부파일용 -->
		첨부파일 : <input type="file" name="imgfile" accept="image/*" /> <br/>
		<input type="button" value="전송" onclick="abc()" />
	</form>
	<script>
		function abc(){
			if(f.imgfile.value == ""){
				alert("이미지 파일을 첨부해 주시길 바랍니다.");
			}else{
				f.submit();
			}
		}
	</script>

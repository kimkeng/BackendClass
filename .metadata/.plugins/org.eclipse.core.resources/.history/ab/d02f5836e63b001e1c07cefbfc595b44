package io;

import java.io.FileWriter;
import java.util.Scanner;

public class file5 {
	FileWriter fw = null;
	
	//static main에는 this를 사용하지 못함
	public static void main(String[] args) { //static은 this를 사용 못함 고로 외부클래스를 이용하는것
		try {
			Scanner sc = null;
			new file5().fw = new FileWriter("E:\\project\\web\\src\\main\\webapp\\user.txt",true);
			sc = new Scanner(System.in);
			int f;
			for(f=0;f<3;f++) { // for(;;) 이건 for문의 무한 루프
				
				System.out.println("사용자 이름을 입력해 주세요");
				String name = sc.nextLine();
				new file5().fw.write(name);
				//break;
			}
			sc.close();
			new file5().fw.write(name);
			
			//new file5().fw.close();
		}catch(Exception e) {
			System.out.println("파일 오류발생!!!");
		}
	}
}
